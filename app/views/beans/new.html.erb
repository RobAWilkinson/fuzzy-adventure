<h1>Add a new bean!</h1>

    <%= form_for @bean do |f| %>

        Name: <%= f.text_field :name %>
        Roast: <%= f.text_field :roast %>
        Origin: <%= f.text_field :origin %>
        Quantity: <%= f.text_field :quantity %>

        <%= f.submit "Add beans!" %>

    <% end %>

    <%= link_to "Back to the list!", beans_path %>
